{
  "name": "signify",
  "version": "1.0.0",
  "description": "Keystroke verification platform for proving human authorship",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"bun run backend:dev\" \"bun run frontend:dev\"",
    "build": "bun run backend:build && bun run frontend:build",
    "start": "bun run backend:start",
    "backend:dev": "cd backend && bun run dev",
    "backend:build": "cd backend && bun run build",
    "backend:start": "cd backend && bun run start",
    "frontend:dev": "cd frontend && bun run dev",
    "frontend:build": "cd frontend && bun run build",
    "frontend:preview": "cd frontend && bun run preview",
    "db:migrate": "cd backend && bun run db:migrate",
    "db:seed": "cd backend && bun run db:seed",
    "test": "bun run test:backend && bun run test:frontend",
    "test:watch": "concurrently \"bun run test:backend:watch\" \"bun run test:frontend:watch\"",
    "test:backend": "cd backend && bun test",
    "test:backend:watch": "cd backend && bun test --watch",
    "test:frontend": "cd frontend && bun test",
    "test:frontend:watch": "cd frontend && bun test --watch",
    "lint": "concurrently \"bun run backend:lint\" \"bun run frontend:lint\"",
    "type-check": "concurrently \"bun run backend:type-check\" \"bun run frontend:type-check\"",
    "format": "concurrently \"bun run backend:format\" \"bun run frontend:format\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}